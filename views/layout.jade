!!! 5
html(lang='en') 
  head
    meta(charset='utf-8')
    title= locals.title
    meta(name='viewport', 
      content='width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0')
    meta(name='description', content='')
    meta(name='author',      content='')
    link(rel='stylesheet', href='/_/stylesheets/main.css')

  body 
    .wrapper
      //a.git-ribbon(href="https://github.com/lxe/clickbin")
      //  img(style="position: absolute; top: 0; right: 0; border: 0;", src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png", alt="Fork me on GitHub")
      .navbar#master-nav
        .navbar-inner
          .nav-collapse
            a(href='/').brand 
              if(typeof(profile) !== 'undefined' && profile.username)
                strong #{profile.username}
                | .clickb.in
              else
                strong clickb.in
            ul.nav
              block breadcrumb
            ul.nav.pull-right
              if(user && user.loggedIn && typeof(profile)!=='undefined' && profile.username !== user.username)
                li
                  a(href=getUserURI(user.username)) home
              li 
                if(!user || !user.loggedIn)
                  a(href=getRootURI() + "_/login") login
                else
                  a(href=getRootURI() + "_/logout") logout
      //
      // Body block
      //        
      .container#body 
        block body
  
      footer#footer
        .container Created by <a href="http://victorp.me">Victor</a> and <a href="http://aleksey.smolenchuk.com">Aleksey</a>

