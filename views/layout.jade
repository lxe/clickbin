      .navbar#master-nav
        .navbar-inner
          .nav-collapse
            if(typeof(profile) !== 'undefined' && profile.username)
              a(href='/').brand 
                strong #{profile.username}
                | .!{domain}
            else
              a(href="http://"+domain).brand
                strong !{domain}
            ul.nav
              block breadcrumb
            ul.nav.pull-right
              if(user && user.loggedIn && typeof(profile)!=='undefined' && profile.username !== user.username)
                li
                  a(href=getUserURI(user.username)) home
              li 
                if(!user || !user.loggedIn)
                  a(href=getRootURI() + "_/login") login
                else
                  a(href=getRootURI() + "_/logout") logout
      //- Body block
