extends layout

block breadcrumb
  include bin-breadcrumbs

block body
  div#fb-root
  script 
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=174190695993894";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  #landing-promo
    .container.alerts
      include alerts
    .anchor-wrap
      .container
        .row
          .span7 
            h1 Welcome to Clickbin!
          .span5(style="height:1px")
            img.pull-right.img-circle.mascot(src="/_/images/mascot.png")
        .row
          br
          br

  #info
    .container
      .row
        .span2
        .span4
          h2 what does clickb.in do?
          .well
            p clickbin lets you organize and share links. For example, I put together a collection of my favorite cafes in pittsburgh.
        .span4
          h2 stay tuned for more features!
          .newsletter-wrapper
            .inner
              iframe.hidden(src="about:blank", id="newsletter-target", name="newsletter-target")
              p(style="min-height: auto;") 
                | sign up for updates:
              form.form-inline#newsletter(action='https://docs.google.com/spreadsheet/formResponse?formkey=dHpHWkpHNWEwYjhRUmVlX2Z3bFZsc2c6MQ&ifq', 
                method='POST', target="newsletter-target", style="margin-bottom: 20px;")
                input(type="hidden", value="Submit", name="submit")
                input(type="hidden", value="0", name="pageNumber")
                input(type="hidden", value="", name="backupCache")
                .clearfix
                  .button-wrapper
                    button.btn.btn-navy(type="submit") 
                      strong sign up
                  .block-input-wrapper
                    input.input-block-level#newsletter-email(
                      type="text", 
                      name="entry.0.single", 
                      placeholder="email")

              .clearfix
                .pull-left

                  a(href="https://twitter.com/share", class="twitter-share-button", data-url="http://clickb.in", data-text="Clickbin - the easy way to organize a bunch of links. No sign-up required.", data-via="clickbin") Tweet
                  script
                    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");

                .pull-left
                  div.fb-like(data-href="http://clickb.in", data-send="true", 
                    data-layout="button_count", data-width="300", data-show-faces="false")
                

  #newsletter-thanks.modal.hide
    .modal-header
      button.close(type="button", data-dismiss="modal", aria-hidden="true")&times;
      h3 thanks!
    .modal-body
      p thanks for signing up! we'll keep you informed about new features of clickb.in
    .modal-footer
      a.btn(href="#", data-dismiss="modal") Close

