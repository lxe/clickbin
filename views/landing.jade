extends layout

block body
  #landing-promo
    .container.alerts
      include alerts
    .anchor-wrap
      .container
        .row
          .span8
            #landing-form
              .clearfix
                .pull-left
                  h2 
                    span.subtitle step 1:  
                    | paste a link   
                    i.icon-circle-arrow-down.arrow   
              form#linkform(action="/_/link/add", method="post")
                .input-append
                  div(style="width:160px").pull-right
                    button.btn-orangered.input-block-level.btn.btn-large(type="submit")
                      strong put in a bin 
                  div(style="margin-right:160px")
                    input#linkinput(type="text", name="uri", placeholder="ie., reddit.com")
              .clearfix
                .pull-right
                
                  h2.orangered 
                    span.subtitle step 2:  
                    | put it in a clickbin  
                    i.icon-circle-arrow-up.arrow  
